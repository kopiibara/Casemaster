{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "types": ["react", "react-dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
